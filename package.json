{
  "name": "dsc-spectrum",
  "version": "0.4.1",
  "description": "Deal with DSC (Differential Scanning Calorimetry) data",
  "type": "module",
  "exports": {
    ".": "./lib/index.js"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "build": "npm run tsc && cheminfo-build  --entry lib/index.js --root DSCSpectrum",
    "build-doc": "cheminfo doc",
    "check-types": "tsc --noEmit",
    "clean": "rimraf coverage lib",
    "eslint": "eslint src",
    "eslint-fix": "npm run eslint -- --fix",
    "prepack": "npm run tsc",
    "prettier": "prettier --check src",
    "prettier-write": "prettier --write src",
    "test": "npm run test-only && npm run check-types && npm run eslint && npm run prettier",
    "test-only": "vitest run --coverage",
    "tsc": "npm run clean && npm run tsc-build",
    "tsc-build": "tsc --project tsconfig.build.json",
    "test-import": "node -e \"import('file://' + process.cwd() + '/src/index.js').then(console.log)\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cheminfo/dsc-spectrum.git"
  },
  "keywords": [],
  "author": "Luc Patiny",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cheminfo/dsc-spectrum/issues"
  },
  "homepage": "https://github.com/cheminfo/dsc-spectrum#readme",
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/papaparse": "^5.5.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@zakodium/tsconfig": "^1.0.2",
    "cheminfo-build": "^1.3.2",
    "eslint": "^9.39.2",
    "eslint-config-cheminfo-typescript": "^21.1.0",
    "prettier": "^3.8.1",
    "rimraf": "^6.1.2",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "common-spectrum": "3.1.0",
    "ensure-string": "^1.2.0",
    "papaparse": "^5.5.3",
    "physical-chemistry-parser": "^3.4.2",
    "tga-spectrum": "^1.0.0"
  }
}
